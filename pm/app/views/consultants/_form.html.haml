= form_for @consultant do |f|
  - if @consultant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@consultant.errors.count, "error")} prohibited this consultant from being saved:"
      %ul
        - @consultant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .actions
    = f.submit 'Save'
