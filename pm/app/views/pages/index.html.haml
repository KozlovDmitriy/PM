
.blog-header
  %h1 Главная страницы
  = title 'Главная страница'

.row
  .col-md-10
    #pieChartContainer{:style => 'max-width: 800px; height: 400px'}
  .col-md-2
    %p
      = label_tag :analysis_date, 'Анализ от '
      = select_tag :analysis_date, options_for_select(%w[01.02.2014 15.01.2014]), :class => 'form-control'
    %p
      = link_to 'Подробнее по консультантам', '#', :class => 'btn btn-default'

%script
  var pieChartDataSource = [
  {category: 'План: 1000 руб.', value: 10},
  {category: 'Выполнено: 909.34 руб.', value: 90}
  ];

  $(function(){
  $('#pieChartContainer').dxPieChart({
  dataSource: pieChartDataSource,
  series: {
  argumentField: 'category',
  valueField: 'value'
  },
  title: {
  text: 'Выполнение плана'
  },
  });
  });