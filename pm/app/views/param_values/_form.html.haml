= form_for @param_value do |f|
  - if @param_value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@param_value.errors.count, "error")} prohibited this param_value from being saved:"
      %ul
        - @param_value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :param_id
    = f.number_field :param_id
  .actions
    = f.submit 'Save'
