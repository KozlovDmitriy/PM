
.blog-header
  %h1= yield(:title)
  = title 'Детальная страница проблемы'

.row
  .col-md-6.col-md-offset-3
    .form-group
      = label_tag :problem, 'Текст проблемы'
      %p{:id => :problem, :name => :problem}= @problem.description
    .form-group
      = label_tag :type, 'Тип проблемы'
      %p{:id => :type, :name => :type}= @problem.get_russian_type

    = link_to 'Назад', problems_path, :class => 'btn btn-default'