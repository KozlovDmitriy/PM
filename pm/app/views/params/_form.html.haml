= form_for @param do |f|
  - if @param.errors.any?
    #error_explanation
      %h2= "#{pluralize(@param.errors.count, "error")} prohibited this param from being saved:"
      %ul
        - @param.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :input_type
    = f.text_field :input_type
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :excel_label
    = f.text_field :excel_label
  .field
    = f.label :owl_class
    = f.text_field :owl_class
  .field
    = f.label :local_similarity
    = f.text_field :local_similarity
  .actions
    = f.submit 'Save'
