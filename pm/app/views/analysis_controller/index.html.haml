
.blog-header
  %h1 Анализ работы консультантов
  = title 'Анализ работы консультантов'

.row
  .col-md-6.col-md-offset-2
    %form{:role => 'form'}
      .form-group
        %label{:for => 'impl_plan'} Выполнение плана
        %select.form-control{:id => 'impl_plan'}
          %option ImplPlan_24
      .form-group
        %label{:for => 'av_check'} Значение среднего чека
        %select#av_check.form-control
          %option AvCheck_58
      .form-group
        %label{:for => 'items_count'} Количество позиций в чеке
        %select#items_count.form-control
          %option ItemsCount_20
      .form-group
        %label{:for => 'total_checks_count'} Общее количество чеков
        %select#total_checks_count.form-control
          %option TotalChecksCount_112
      .form-group
        %label{:for => 'problems'} Проблемы
        %ul#problems.list-group
          %li.list-group-item-warning Cras justo odio
          %li.list-group-item-warning Dapibus ac facilisis in
          %li.list-group-item-warning Morbi leo risus
          %li.list-group-item-warning Porta ac consectetur ac
          %li.list-group-item-warning Vestibulum at eros
      .form-group
        %label{:for => 'solutions'} Рекомендации
        %ul#solutions.list-group
          %li.list-group-item-danger Donec id elit non mi porta gravida at eget metus.
          %li.list-group-item-danger Maecenas sed diam eget risus varius blandit.